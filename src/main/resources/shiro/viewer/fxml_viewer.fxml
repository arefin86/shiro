<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.input.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>
<?import shiro.viewer.*?>

<BorderPane fx:id="root" prefHeight="600.0" prefWidth="800.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/2.2" fx:controller="shiro.viewer.FXMLViewerController">
  <bottom>
    <TextArea fx:id="console" editable="false" minHeight="50.0" prefHeight="50.0" prefWidth="-1.0" wrapText="true" />
  </bottom>
  <center>
    <SplitPane dividerPositions="0.5" focusTraversable="true" prefHeight="160.0" prefWidth="200.0">
      <items>
        <VBox maxWidth="500.0" prefHeight="-1.0" prefWidth="-1.0">
          <children>
            <AnchorPane id="AnchorPane" maxWidth="-1.0" minHeight="-1.0" prefHeight="-1.0">
              <children>
                <Button fx:id="run" defaultButton="false" mnemonicParsing="false" onAction="#handleRun" text="Run" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="10.0" />
              </children>
            </AnchorPane>
            <TextArea fx:id="code" prefHeight="-1.0" prefWidth="-1.0" promptText="Enter Shiro code" wrapText="true" VBox.vgrow="ALWAYS" />
          </children>
          <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" />
          </padding>
        </VBox>
        <TabPane prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE">
          <tabs>
            <Tab closable="false" text="Canvas">
              <content>
                <AnchorPane id="AnchorPane" prefHeight="488.0" prefWidth="346.0">
                  <children>
                    <Pane fx:id="canvas" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="-1.0" prefWidth="-1.0" styleClass="canvas" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.topAnchor="10.0" />
                    <ListView id="" fx:id="altsList" editable="false" maxWidth="-Infinity" prefHeight="-1.0" prefWidth="100.0" AnchorPane.bottomAnchor="5.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="5.0" />
                  </children>
                </AnchorPane>
              </content>
            </Tab>
            <Tab closable="false" text="Light Table">
              <content>
                <VBox id="VBox" alignment="CENTER" spacing="5.0">
                  <children>
                    <ToolBar>
                      <items>
                        <ToggleButton mnemonicParsing="false" onAction="#layoutAsGrid" selected="true" text="Grid">
                          <toggleGroup>
                            <ToggleGroup fx:id="layouts" />
                          </toggleGroup>
                        </ToggleButton>
                        <ToggleButton mnemonicParsing="false" onAction="#handleFreeFormLayout" text="Freeform" toggleGroup="$layouts" />
                      </items>
                    </ToolBar>
                    <ScrollPane id="ScrollPane" fx:id="lightTableScrollPane" pannable="true" prefViewportHeight="488.0" prefViewportWidth="346.0" VBox.vgrow="ALWAYS">
                      <content>
                        <FlowPane fx:id="gallery" hgap="10.0" prefHeight="-1.0" prefWidth="-1.0" prefWrapLength="1200.0" vgap="10.0">
                          <padding>
                            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                          </padding>
                        </FlowPane>
                      </content>
                    </ScrollPane>
                  </children>
                </VBox>
              </content>
            </Tab>
          </tabs>
        </TabPane>
      </items>
    </SplitPane>
  </center>
  <top>
    <MenuBar useSystemMenuBar="true">
      <menus>
        <Menu mnemonicParsing="false" text="File">
          <items>
            <MenuItem mnemonicParsing="true" onAction="#handleFileOpen" text="Open…">
              <accelerator>
                <KeyCodeCombination alt="UP" code="O" control="UP" meta="UP" shift="UP" shortcut="DOWN" />
              </accelerator>
            </MenuItem>
            <MenuItem mnemonicParsing="true" onAction="#handleSave" text="Save">
              <accelerator>
                <KeyCodeCombination alt="UP" code="S" control="UP" meta="UP" shift="UP" shortcut="DOWN" />
              </accelerator>
            </MenuItem>
            <MenuItem mnemonicParsing="false" onAction="#handleSaveAs" text="Save As…" />
          </items>
        </Menu>
      </menus>
    </MenuBar>
  </top>
</BorderPane>
